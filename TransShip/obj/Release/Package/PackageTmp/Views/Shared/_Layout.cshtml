    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <link href="~/Content/datatables/datatables.min.css" rel="stylesheet" />
    <link href="~/Content/animate.min.css" rel="stylesheet" />
    <link href="~/Content/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/owl.theme.css" rel="stylesheet" />
    <link href="~/Content/style.default.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script src="~/Scripts/jquery.cookie.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <script src="~/Scripts/waypoints.min.js"></script>
    <script src="~/Scripts/modernizr.js"></script>
    <script src="~/Scripts/bootstrap-hover-dropdown.js"></script>
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Scripts/knockout.mapping.js"></script>
    <script src="~/Content/datatables/datatables.min.js"></script>
    <script src="~/Scripts/respond.min.js"></script>
    <script src="~/Scripts/underscore-min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/numeral.min.js"></script>
    <script src="~/Scripts/blockUI.js"></script>

    <script src="~/Content/custom/model.js"></script>
    <script src="~/Content/custom/scripts.js"></script>
    <script src="~/Content/custom/register.js"></script>


</head>

<body>
    <script>
        $(document).ready(function () {
            console.log("applyBindings");
            ko.applyBindings();

            model.register.initialize();
        });
    </script>

    @{
        if (string.IsNullOrEmpty((string)ViewData["result"]) == false) {
            <div class="alert alert-success">
                <strong>Account confirmed!</strong> Transship will contact you to approve your account.
            </div>
        }
        if ((string)ViewData["Message"] == "Invalid credentials") {
            <div class="alert alert-warning">
                <strong>Invalid credentials!</strong>
            </div>
        }
    }
    <div class="modal fade" id="forgot-password" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="Login">Forgot Password</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-10">
                            <input type="text" data-bind="value: model.recover.email" class="form-control" id="recoveremail" name="recoveremail" placeholder="Registered email">
                        </div>
                    </div>
                    <div class="form-group"></div>
                    <div class="form-group">
                        <p class="text-center">
                            <button type="button" class="btn btn-info mybtn" data-bind="click: recoverPassword" data-dismiss="modal"><i class="fa fa-sign-in"></i> Recover</button>
                            <button type="button" class="btn btn-default mybtn" data-dismiss="modal"><i class="fa fa-power-off"></i> Cancel</button>
                        </p>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="alert alert-success" data-bind="visible: model.recoversuccess() == 'success'">
                        <strong>Success!</strong> We sent you an email for password recovery. Check your inbox
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="Login">Login</h4>
                </div>
                <div class="modal-body">
                    <form action=@Url.Action("Index", "Home") method="POST">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <input type="text" class="form-control" id="email" name="email" placeholder="email">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="password" name="password" placeholder="password">
                        </div>

                        <p class="text-center">
                            <button class="btn btn-primary mybtn" type="submit"><i class="fa fa-sign-in"></i> Log in</button>
                        </p>
                    </form>
                    <ul class="menu">
                        <li>
                            <a href="#" data-toggle="modal" data-target="#forgot-password" data-dismiss="modal">Forgot password?</a>
                        </li>
                        <li>
                            <a href="#" data-toggle="modal" data-target="#register-modal" data-dismiss="modal">Register</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="top">
        <div class="container">
            <div class="col-md-6">

            </div>
            <div class="col-md-6">
                <ul class="menu">
                    @if (Request.IsAuthenticated) {
                        if (ViewData["customerId"] != null) {
                            <li>
                                @Html.ActionLink("My Account", "Shipments", "Customer")
                            </li>
                        } else {
                            <li>
                                @Html.ActionLink("Administration", "Shipments", "Admin")
                            </li>
                        }

                        <li>
                            <span style="color: white;"><i class="glyphicon glyphicon-user"></i> @User.Identity.Name</span>
                        </li>
                        <li>
                            @Html.ActionLink("Log Out", "LogOff", "Home")
                        </li>
                    } else {
                        <li>
                            <a href="#" data-toggle="modal" data-target="#login-modal">Login</a>
                        </li>
                        <li>
                            @Html.ActionLink("Register", "Register", "Home")
                        </li>
                    }
                </ul>
            </div>
        </div>







    </div>

    <!-- *** TOP BAR END *** -->
    <!-- *** NAVBAR ***
    _________________________________________________________ -->

    <div class="navbar navbar-default yamm" role="navigation" id="navbar">
        <div class="container">
            <div class="navbar-header">

                <a class="navbar-brand home" href="/" data-animate-hover="bounce">
                    <img src="~/images/TransShipLogo.png" alt="Transship" class="hidden-xs" style="max-width: 250px; margin-top: +10px;">
                    <img src="~/images/TransShipLogo.png" alt="Transship" class="visible-xs" style="max-width: 250px; margin-top: +10px;"><span class="sr-only">Transship - go to homepage</span>
                </a>
                <div class="navbar-buttons">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <i class="fa fa-align-justify"></i>
                    </button>

                </div>
            </div>
            <!--/.navbar-header -->

            <div class="navbar-collapse collapse" id="navigation">

                <ul class="nav navbar-nav navbar-left"></ul>

            </div>
            <!--/.nav-collapse -->

            <div class="navbar-buttons">


                <!--/.nav-collapse -->



            </div>

            <!--/.nav-collapse -->

        </div>
        <!-- /.container -->
    </div>
    <!-- /#navbar -->
    <!-- *** NAVBAR END *** -->

    <div id="all">

        <div id="content">
            <div class="container body-content">
                @RenderBody()
            </div>
        </div><!-- /#content -->
        <!-- *** FOOTER ***
        _________________________________________________________ -->
        <div id="footer">
            <div class="container">
                <div class="row">


                </div>
                <!-- /.row -->

            </div>
            <!-- /.container -->
        </div>
        <!-- /#footer -->
        <!-- *** FOOTER END *** -->
